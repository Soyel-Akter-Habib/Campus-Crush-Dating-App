<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".authen.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/primaryColor"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Let's know you"
                android:textSize="25sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Please provide all the details correctly"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"/>

        </LinearLayout>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/numberView"
                android:layout_marginTop="-120dp"
                android:layout_marginHorizontal="35dp"
                app:cardBackgroundColor="#ECECEC"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@+id/login_illus"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"

                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/image_login"
                        android:id="@+id/userImage"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:text="Upload Image"
                        android:layout_height="wrap_content"/>




                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/userName"
                            android:hint="Name"
                            android:inputType="text"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/person"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/userEmail"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/email"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/userLocation"
                            android:hint="Location"
                            android:inputType="text"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/location"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <CheckBox
                        android:textColor="@color/black"
                        android:id="@+id/tAndC"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:text="By clicking on that you are accepting our terms ans conditions"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/saveProfile"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:text="Continue"

                        app:backgroundTint="@color/primarySecondary"
                        app:cornerRadius="12dp"

                        app:elevation="8dp" />



                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>






    </LinearLayout>


</androidx.core.widget.NestedScrollView>